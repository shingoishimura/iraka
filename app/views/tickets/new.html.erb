  </header>
  <div class="ticket-sell-main">
    <h2 class="ticket-sell-title">公演の情報を入力</h2>
    <p>　</p>
    <%= form_with model: @item ,local: true do |f| %>

    <%# <%= render 'shared/error_messages', model:  f.object %> 

    <div class="img-upload">
      <div class="weight-bold-text">
        チラシ画像
        <span class="indispensable">必須</span>
      </div>
      <p>　</p>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"ticket-image" %>
      </div>
    </div>
    
    <div class="new-ticket">
      <div class="weight-bold-text">
        公演名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :program, class:"ticket-text", id:"ticket-name", placeholder:"公演名（必須 40文字まで)", maxlength:"40" %>
      <div class="tickets-explain">
        <div class="weight-bold-text">
          公演情報他
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :text, class:"items-text", id:"item-info", placeholder:"公演の説明（必須 1,000文字まで）作：井上ひさし　演出：佐野　暁　出演：石村勇二　等" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
      <div class="weight-bold-text">
          <span>日付</span>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :date, class:"date-input", id:"ticket-date", placeholder:"例）2025-10-29" %>
         </div>
        <div class="weight-bold-text">
      <span>時間</span>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :time, class:"time-input", id:"ticket-time", placeholder:"例）14:00" %>
  
